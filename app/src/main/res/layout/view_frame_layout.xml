<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/extra_large_space"
        android:layout_gravity="center"
        android:layout_margin="@dimen/small_margin"
        android:background="@color/violet" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_space"
        android:layout_gravity="center"
        android:layout_margin="@dimen/very_large_margin"
        android:background="@color/aqua" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_space"
        android:layout_gravity="center"
        android:layout_margin="@dimen/extra_large_margin"
        android:background="@color/yellow" />
</FrameLayout>