<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cream_colored"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width_image_top"
            android:layout_height="@dimen/height_image_top"
            android:layout_gravity="left"
            android:src="@drawable/android_left" />

        <ImageView
            android:layout_width="@dimen/width_image_top"
            android:layout_height="@dimen/height_image_top"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/extra_small_margin"
            android:layout_marginBottom="@dimen/extra_small_margin"
            android:src="@drawable/android_right" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/extra_small_2_dimens"
        android:background="@color/black" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/raw_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:background="@color/forest_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/double_large_margin"
            android:background="@color/magenta" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/larger_margin"
            android:background="@color/cream_colored" />

        <ImageView
            android:layout_width="@dimen/width_image_top"
            android:layout_height="@dimen/height_image_top"
            android:layout_gravity="center"
            android:layout_margin="@dimen/more_than_larger_margin"
            android:src="@drawable/android_bottom" />
    </FrameLayout>
</LinearLayout>
