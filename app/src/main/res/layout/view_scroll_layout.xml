<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/small_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="640dp">

        <!--set margin right for white space between squares-->
        <TextView
            android:id="@+id/box1"
            android:layout_width="@dimen/size_square"
            android:layout_height="@dimen/size_square"
            android:layout_marginRight="@dimen/margin_square_large"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/box2"
            android:layout_width="@dimen/size_square"
            android:layout_height="@dimen/size_square"
            android:layout_toRightOf="@id/box1"
            android:background="@color/light_blue" />

        <TextView
            android:id="@+id/box3"
            android:layout_width="@dimen/size_square"
            android:layout_height="@dimen/size_square"
            android:layout_marginRight="@dimen/margin_square_small"
            android:layout_toRightOf="@id/box2"
            android:background="@color/cold_blue" />

        <TextView
            android:id="@+id/box4"
            android:layout_width="@dimen/size_square"
            android:layout_height="@dimen/size_square"
            android:layout_toRightOf="@id/box3"
            android:background="@color/salmon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/box1"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/info_scroll_view" />
    </RelativeLayout>


</ScrollView>